#%Module######################################################################
##
##     tau2
##
proc ModulesHelp { } {
        puts stderr "Load tau2"
}


set comp gcc-system
set mpi openmpi-3.1.4
set name tau2
set ver 2.28.1
set base /g/data/dp9/jtl548/opt/modules/$comp/$mpi/$name/$ver

#prereq hdf5

prepend-path "LD_LIBRARY_PATH" $base/lib
prepend-path "LIBRARY_PATH" $base/lib
prepend-path "CPATH" $base/include
prepend-path "MANPATH" $base/share/man

setenv "TAU_ROOT"  $base
setenv "TAU_PATH"  $base
setenv "TAU_INCLUDES" $base/x86_64/include
setenv "TAU_LIBRARIES" $base/x86_64/lib
setenv "TAU_MAKEFILE" $base/x86_64/lib/Makefile.tau-ompt-tr4-mpi-pdt-openmp
setenv "TAU_VERSION" $ver

unset comp
unset mpi
unset name
unset ver
unset base
